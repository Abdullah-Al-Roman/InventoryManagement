@model IEnumerable<InventoryManagement.DataModel.Products>

@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.datatables.net/2.3.0/css/dataTables.dataTables.min.css" />
<div class="card card-primary">
    <div class="card-header" style="background-color:#717171">
        <h3 class="card-title">Product List</h3>
    </div>

    <table id="myTableProduct" class="table">
        <thead>
            <tr>
                <th>
                    ProductName
                </th>
                <th>
                    Category
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Price
                </th>
                <th>
                    Description
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ProductName
                    </td>
                    <td>
                        @item.Category
                    </td>
                    <td>
                        @item.Quantity
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        <a href="@Url.Action("ProductEdit", "Product", new { id = @item.ProductID })" class="btn btn-xs btn-warning me-1">Edit</a>
                        <a href="@Url.Action("DeleteProduct", "Product", new { id = @item.ProductID })" asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-xs btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <!-- ✅ Include the required DataTables JS (with HTTPS) -->
    <script src="https://cdn.datatables.net/2.3.0/js/dataTables.min.js"></script>

    <!-- ✅ Initialize DataTable -->
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            var table = new DataTable('#myTableProduct');
        });
    </script>
}
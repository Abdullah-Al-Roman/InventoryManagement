@model IEnumerable<InventoryManagement.DataModel.Categorys>

@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.datatables.net/2.3.0/css/dataTables.dataTables.min.css" />

<div class="card card-primary">
    <div class="card-header" style="background-color:#717171">
        <h3 class="card-title">Category List</h3>
    </div>

    <table id="myTable" class="table">
        <thead>
            <tr>
                <th>
                    CategoryName
                </th>

                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.CategoryName
                    </td>                 
                    <td>
                        <a href="@Url.Action("EditCategory", "Category", new { id = @item.CategoryID })" class="btn btn-xs btn-warning me-1">Edit</a>
                        @*<a href="@Url.Action("DeleteCategory", "Category", new { id = @item.CategoryID })" asp-action="Delete" asp-route-id="@item.CategoryID" class="btn btn-xs btn-danger">Delete</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
<!-- ✅ Include the required DataTables JS (with HTTPS) -->
<script src="https://cdn.datatables.net/2.3.0/js/dataTables.min.js"></script>

<!-- ✅ Initialize DataTable -->
<script>
    $(document).ready(function() {
        // Initialize DataTable
        var table = new DataTable('#myTable');
    });
</script>
}